#  rewrite ^ $scheme://www.example.com$request_uri;
#}

server {
  ################################
  # START BASIC CONFIG           #
  ################################
  listen 80;
  server_name     (|www\.)?example.com;
  access_log   /var/log/nginx/example.com/example.com-access.log;
  error_log    /var/log/nginx/example.com/example.com-error.log;

  # This will print rewrite logs to the error log. There error log needs to be
  # set to 'notice' for this to work.
  rewrite_log off;

  # NEVER PUT THESE INSIDE OF 'location / {}'
  root /var/www/sites/example.com/;

  # Change 500 error page to something a little more pretty
  error_page   502 503 504  /50x.html;
  location = /50x.html {
    root /usr/share/nginx/html/;
  }


  index index.php index.html index.htm;

  # php pages handling
  location ~ \.php$ {
    # stop nasty PHP design flaw, see holaba.
    try_files $uri = 404;
    # remove haproxy check from access logs
    if ($request_uri = /nc_check.php) {
       access_log off;
    }
    fastcgi_pass              unix:/tmp/php-fpm.sock;
    fastcgi_index             index.php;
    fastcgi_buffer_size       128k;
    fastcgi_buffers           64 256k;
    fastcgi_intercept_errors  on;
    fastcgi_param             SCRIPT_FILENAME  $document_root$fastcgi_script_name;
    include                   fastcgi_params;
  }


  # Block access to hidden files
  location ~ /\. {
    deny all;
    access_log off;
    log_not_found off;
  }

  location = /favicon.ico {
    log_not_found off;
    access_log off;
  }

  location = /robots.txt {
    allow all;
    log_not_found off;
    access_log off;
  }

  # This matters if you use drush
  location = /backup {
    deny all;
  }

  location / {
    # This is cool because no php is touched for static content
    try_files $uri @rewrite;
  }

  location @rewrite {
    # Some modules enforce no slash (/) at the end of the URL
    # Else this rewrite block wouldn't be needed (GlobalRedirect)
    rewrite ^/(.*)$ /index.php?q=$1;
  }

  # Fighting with ImageCache? This little gem is amazing.
  location ~ ^/sites/.*/files/imagecache/ {
    try_files $uri @rewrite;
  }

  # Catch image styles for D7 too.
  location ~ ^/sites/.*/files/styles/ {
    try_files $uri @rewrite;
  }

  location ~* \.(js|css|png|jpg|jpeg|gif|ico)$ {
    expires 30d;
  }

  ################################
  # END BASIC CONFIG             #
  ################################
  ################################
  # START CONFIG EXAMPLES        #
  ################################

  # - Set up a reverse proxy to send all request for /admin to localhost:8080
  #location ~ ^/admin {
  #  proxy_pass        http://localhost:8080;
  #  proxy_set_header  X-Real-IP  $remote_addr;
  #  proxy_set_header  Host $host;
  #}

  # - Set expires on css/js to 1 year
  #location ~* (.*).(css|js|css$|js$) {
  #  expires 1y;
  #  break;
  #}

  # - Password protect specific directory
  #location /eaccel {
  #  auth_basic "Restricted";
  #  auth_basic_user_file  /etc/nginx/conf.d/wufantuan_pass;
  #}
  
  # - Deny access to all files that start with .ht
  #location ~ /\.ht {
  #  deny  all;
  #}
}

