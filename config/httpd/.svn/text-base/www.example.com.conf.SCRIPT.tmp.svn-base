# Rewrite example.com -> www.example.com. Works for both http and https

  ################################
  # START BASIC CONFIG           #
  ################################

#########################
# HTTP Config		#
#########################

# Listen for virtual host requests on all IP addresses
NameVirtualHost *:80

<VirtualHost *:80>
    ServerName $CUSTOMER_WEBSITE_NAME
    DocumentRoot /var/www/$CUSTOMER_WEBSITE_NAME
    LogLevel warn
    ErrorLog logs/$CUSTOMER_WEBSITE_NAME/error_log
    CustomLog logs/$CUSTOMER_WEBSITE_NAME/access_log combined
</VirtualHost>


